{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": ["airbnb-base", "prettier"],
	"parserOptions": {
		"ecmaVersion": 2019,
		"sourceType": "module"
	},
	"plugins": ["prettier", "svelte3"],
	"overrides": [
		{
			"files": ["*.svelte"],
			"processor": "svelte3/svelte3"
		}
	],
	"rules": {
		"prettier/prettier": "error",
		"indent": ["warn", "tab"],
		"quotes": ["warn", "single"],
		"no-unused-vars": "warn",
		"no-console": "off",
		"no-tabs": "off",
		"no-restricted-syntax": "off",
		"func-names": "off"
	}
}
